# Configuration Base de Données MySQL

# Option 1: URL complète Railway (Recommandé)
# Format: mysql://user:password@host:port/database
# MYSQL_URL=mysql://root:yourpassword@yourhost.railway.app:port/railway

# Option 2: Variables individuelles Railway
# MYSQLHOST=yourhost.railway.app
# MYSQLPORT=3306
# MYSQLDATABASE=railway
# MYSQLUSER=root
# MYSQLPASSWORD=yourpassword

# Option 3: Variables DB_* (alternative)
# DB_HOST=yourhost.railway.app
# DB_PORT=3306
# DB_NAME=railway
# DB_USER=root
# DB_PASSWORD=yourpassword

# Configuration locale MySQL (développement)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ecole_chebbi
DB_USER=root
DB_PASSWORD=

# Configuration Serveur
PORT=3000
NODE_ENV=development

# Session Secret (CHANGEZ CECI EN PRODUCTION!)
SESSION_SECRET=change-this-to-a-random-long-secret-key-in-production

# Paramètres Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.docx,.doc,.pptx,.ppt

# Identifiants Admin (pour configuration initiale - CHANGEZ EN PRODUCTION!)
ADMIN_EMAIL=admin@ecole-chebbi.tn
ADMIN_PASSWORD=changeme123
