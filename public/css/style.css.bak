body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background: #35424a;
    color: #ffffff;
    padding: 10px 0;
    text-align: center;
}

h1 {
    margin: 0;
}

.container {
    width: 80%;
    margin: auto;
    overflow: hidden;
}

footer {
    background: #35424a;
    color: #ffffff;
    text-align: center;
    padding: 10px 0;
    position: relative;
    bottom: 0;
    width: 100%;
}

/* ====================================
   لوحة الشرف - تصميم متطور وإبداعي
==================================== */

.honor-board-section {
    position: relative;
    padding: 80px 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    overflow: hidden;
}

.honor-background-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
        radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: patternMove 20s linear infinite;
}

@keyframes patternMove {
    0% { background-position: 0 0; }
    100% { background-position: 50px 50px; }
}

/* العنوان الرئيسي */
.honor-title-wrapper {
    text-align: center;
    margin-bottom: 60px;
    position: relative;
    z-index: 1;
}

.trophy-icon-animated {
    font-size: 80px;
    color: #fbbf24;
    margin-bottom: 20px;
    display: inline-block;
    animation: trophyFloat 3s ease-in-out infinite;
    filter: drop-shadow(0 10px 20px rgba(251, 191, 36, 0.5));
}

@keyframes trophyFloat {
    0%, 100% { transform: translateY(0) rotate(-5deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
}

.honor-main-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}

.title-top {
    font-size: 48px;
    font-weight: 900;
    color: white;
    text-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    letter-spacing: 3px;
}

.title-bottom {
    font-size: 24px;
    font-weight: 600;
    color: #fef3c7;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.title-decoration {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 20px;
}

.star-dec {
    font-size: 24px;
    animation: starPulse 2s ease-in-out infinite;
}

@keyframes starPulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
}

.line-dec {
    width: 150px;
    height: 3px;
    background: linear-gradient(90deg, transparent, #fbbf24, transparent);
}

/* قسم المواد */
.subjects-showcase {
    display: grid;
    gap: 50px;
    position: relative;
    z-index: 1;
}

.subject-container {
    background: white;
    border-radius: 30px;
    padding: 40px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    transition: all 0.5s ease;
}

.subject-container:hover {
    transform: translateY(-10px);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
}

.subject-header-modern {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin-bottom: 40px;
    position: relative;
}

.subject-icon-wrapper {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    color: white;
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.subject-name {
    font-size: 32px;
    font-weight: 800;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.subject-line {
    flex: 1;
    height: 3px;
    background: linear-gradient(90deg, #667eea, transparent);
}

/* منصة التتويج */
.podium-container {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    gap: 30px;
    padding: 40px 20px;
}

.podium-place {
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.5s ease;
}

.podium-place:hover {
    transform: translateY(-15px) scale(1.05);
}

.place-1st {
    order: 2;
}

.place-2nd {
    order: 1;
}

.place-3rd {
    order: 3;
}

/* الأفاتار */
.student-avatar {
    position: relative;
    margin-bottom: 20px;
}

.avatar-circle {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    font-weight: bold;
    color: white;
    position: relative;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.avatar-circle.rank-1 {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    border: 5px solid #fef3c7;
    width: 120px;
    height: 120px;
    font-size: 42px;
}

.avatar-circle.rank-2 {
    background: linear-gradient(135deg, #d1d5db, #9ca3af);
    border: 4px solid #f3f4f6;
}

.avatar-circle.rank-3 {
    background: linear-gradient(135deg, #fb923c, #f97316);
    border: 4px solid #fed7aa;
}

.rank-crown {
    position: absolute;
    top: -15px;
    right: 50%;
    transform: translateX(50%);
    font-size: 32px;
    animation: crownBounce 2s ease-in-out infinite;
}

.rank-crown .fa-crown {
    color: #fbbf24;
    filter: drop-shadow(0 5px 10px rgba(251, 191, 36, 0.5));
}

.rank-crown .fa-medal {
    color: #d1d5db;
    filter: drop-shadow(0 5px 10px rgba(209, 213, 219, 0.5));
}

.rank-crown .fa-award {
    color: #fb923c;
    filter: drop-shadow(0 5px 10px rgba(251, 146, 60, 0.5));
}

@keyframes crownBounce {
    0%, 100% { transform: translateX(50%) translateY(0); }
    50% { transform: translateX(50%) translateY(-10px); }
}

/* بطاقة معلومات الطالب */
.student-info-card {
    background: linear-gradient(135deg, #f9fafb, #ffffff);
    border-radius: 20px;
    padding: 25px;
    min-width: 250px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.student-full-name {
    font-size: 20px;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 10px;
    text-align: center;
}

.student-parent-name {
    font-size: 13px;
    color: #6b7280;
    margin-bottom: 20px;
    text-align: center;
}

.student-parent-name i {
    color: #667eea;
    margin-left: 5px;
}

/* دائرة العلامة مع Progress */
.grade-showcase {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}

.grade-circle {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto;
}

.grade-progress {
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
}

.grade-bg {
    fill: none;
    stroke: #e5e7eb;
    stroke-width: 8;
}

.grade-fill {
    fill: none;
    stroke: #10b981;
    stroke-width: 8;
    stroke-linecap: round;
    stroke-dasharray: 283;
    transition: stroke-dashoffset 1.5s ease-in-out;
}

.grade-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.grade-num {
    display: block;
    font-size: 32px;
    font-weight: 900;
    color: #10b981;
}

.grade-max {
    display: block;
    font-size: 16px;
    color: #6b7280;
}

/* النجوم */
.stars-rating {
    text-align: center;
    font-size: 18px;
}

.star-filled {
    color: #fbbf24;
    margin: 0 2px;
    animation: starTwinkle 1.5s ease-in-out infinite;
}

.star-empty {
    color: #d1d5db;
    margin: 0 2px;
}

@keyframes starTwinkle {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(0.9); }
}

/* قاعدة المنصة */
.podium-base {
    margin-top: 15px;
    border-radius: 10px 10px 0 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    color: white;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.podium-1st {
    width: 260px;
    height: 80px;
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

.podium-2nd {
    width: 260px;
    height: 60px;
    background: linear-gradient(135deg, #d1d5db, #9ca3af);
}

.podium-3rd {
    width: 260px;
    height: 50px;
    background: linear-gradient(135deg, #fb923c, #f97316);
}

.podium-rank {
    font-size: 28px;
}

/* قاعة المشاهير */
.hall-of-fame {
    margin-top: 80px;
    background: white;
    border-radius: 30px;
    padding: 50px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    position: relative;
    z-index: 1;
}

.hall-title {
    text-align: center;
    margin-bottom: 50px;
}

.crown-icon {
    font-size: 50px;
    color: #fbbf24;
    margin-bottom: 15px;
    display: inline-block;
    animation: crownRotate 4s ease-in-out infinite;
}

@keyframes crownRotate {
    0%, 100% { transform: rotate(-10deg); }
    50% { transform: rotate(10deg); }
}

.hall-title h3 {
    font-size: 36px;
    font-weight: 900;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
}

.hall-title p {
    font-size: 16px;
    color: #6b7280;
}

.fame-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
}

.fame-card {
    background: linear-gradient(135deg, #ffffff, #f9fafb);
    border-radius: 25px;
    padding: 30px;
    text-align: center;
    position: relative;
    overflow: hidden;
    border: 3px solid #e5e7eb;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.fame-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, #667eea, #764ba2);
}

.fame-card.position-1 {
    border-color: #fbbf24;
    background: linear-gradient(135deg, #fffbeb, #fef3c7);
}

.fame-card.position-1::before {
    background: linear-gradient(90deg, #fbbf24, #f59e0b, #fbbf24);
    animation: shimmer 2s linear infinite;
}

.fame-card.position-2 {
    border-color: #d1d5db;
}

.fame-card.position-3 {
    border-color: #fb923c;
}

@keyframes shimmer {
    0% { background-position: -100% 0; }
    100% { background-position: 200% 0; }
}

.fame-card:hover {
    transform: translateY(-15px) rotate(2deg);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
}

.fame-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.fame-rank-badge {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 900;
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.fame-icon {
    font-size: 36px;
}

.trophy-gold {
    color: #fbbf24;
    filter: drop-shadow(0 5px 15px rgba(251, 191, 36, 0.5));
    animation: trophyShine 2s ease-in-out infinite;
}

.trophy-silver {
    color: #d1d5db;
    filter: drop-shadow(0 5px 15px rgba(209, 213, 219, 0.5));
}

.trophy-bronze {
    color: #fb923c;
    filter: drop-shadow(0 5px 15px rgba(251, 146, 60, 0.5));
}

.star-blue {
    color: #3b82f6;
    filter: drop-shadow(0 5px 15px rgba(59, 130, 246, 0.5));
}

@keyframes trophyShine {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
}

.fame-avatar-large {
    margin: 20px 0;
}

.avatar-ring {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    font-weight: 900;
    color: white;
    position: relative;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.avatar-ring.position-1 {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    border: 5px solid #fef3c7;
}

.avatar-ring.position-2 {
    background: linear-gradient(135deg, #d1d5db, #9ca3af);
    border: 4px solid #f3f4f6;
}

.avatar-ring.position-3 {
    background: linear-gradient(135deg, #fb923c, #f97316);
    border: 4px solid #fed7aa;
}

.avatar-ring.position-4,
.avatar-ring.position-5,
.avatar-ring.position-6 {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    border: 4px solid #dbeafe;
}

.fame-info {
    margin: 20px 0;
}

.fame-name {
    font-size: 20px;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 8px;
}

.fame-parent {
    font-size: 13px;
    color: #6b7280;
    margin-bottom: 15px;
}

.fame-subject-badge {
    display: inline-block;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 6px 20px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 700;
    box-shadow: 0 3px 10px rgba(102, 126, 234, 0.3);
}

.fame-grade {
    margin-top: 20px;
    padding: 15px;
    background: linear-gradient(135deg, #10b981, #059669);
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
}

.fame-score {
    font-size: 36px;
    font-weight: 900;
    color: white;
}

.fame-total {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.9);
}

/* التجاوب مع الأجهزة المحمولة */
@media (max-width: 768px) {
    .title-top {
        font-size: 32px;
    }
    
    .title-bottom {
        font-size: 18px;
    }
    
    .podium-container {
        flex-direction: column;
        align-items: center;
    }
    
    .place-1st, .place-2nd, .place-3rd {
        order: 0;
    }
    
    .podium-base {
        width: 100%;
        max-width: 300px;
    }
    
    .subject-container {
        padding: 25px;
    }
    
    .hall-of-fame {
        padding: 30px 20px;
    }
    
    .fame-grid {
        grid-template-columns: 1fr;
    }
}

/* بطاقات الأبطال القديمة */
.champion-card {
    background: white;
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    border: 3px solid #e5e7eb;
}

.champion-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
}

.champion-card.rank-1 {
    border-color: #fbbf24;
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
}

.champion-card.rank-1::before {
    background: linear-gradient(90deg, #fbbf24, #f59e0b, #fbbf24);
    animation: shimmer 2s linear infinite;
}

.champion-card.rank-2 {
    border-color: #d1d5db;
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
}

.champion-card.rank-2::before {
    background: linear-gradient(90deg, #d1d5db, #9ca3af);
}

.champion-card.rank-3 {
    border-color: #fb923c;
    background: linear-gradient(135deg, #fff7ed 0%, #fed7aa 100%);
}

.champion-card.rank-3::before {
    background: linear-gradient(90deg, #fb923c, #f97316);
}

@keyframes shimmer {
    0% {
        background-position: -100% 0;
    }
    100% {
        background-position: 200% 0;
    }
}

.champion-card:hover {
    transform: translateY(-10px) rotate(1deg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.champion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.champion-rank {
    font-size: 24px;
    font-weight: bold;
    color: #6b7280;
    background: #f3f4f6;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.champion-medal {
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
}

.champion-body {
    text-align: center;
}

.champion-name {
    font-size: 22px;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 8px;
}

.champion-parent {
    font-size: 14px;
    color: #6b7280;
    margin-bottom: 12px;
}

.champion-subject {
    display: inline-block;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: bold;
    margin-bottom: 12px;
}

.champion-grade {
    margin-top: 12px;
}

/* تأثيرات إضافية */
@media (max-width: 768px) {
    .top-student-card {
        min-width: 280px;
    }
    
    .champion-card {
        margin-bottom: 20px;
    }
}
