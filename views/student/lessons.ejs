<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>
  
  <section class="py-8">
    <div class="container mx-auto px-4">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
          <i class="fas fa-books ml-2 text-primary-600"></i>
          جميع الدروس
        </h1>
        <p class="text-gray-600">تصفح وحمل الدروس الخاصة بقسمك: <span class="font-semibold text-primary-600"><%= user.studentClass %></span></p>
      </div>
      
      <%- include('../partials/messages') %>
      
      <!-- الفلاتر والبحث -->
      <div class="card mb-6 p-6">
        <form method="GET" action="/student/lessons" class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="md:col-span-2">
            <label class="block text-gray-700 font-semibold mb-2">البحث عن درس</label>
            <div class="relative">
              <input 
                type="text" 
                name="search" 
                placeholder="ابحث عن درس..." 
                class="input-field pr-10"
                value="<%= searchQuery || '' %>"
              >
              <div class="absolute right-3 top-3 text-gray-400">
                <i class="fas fa-search"></i>
              </div>
            </div>
          </div>
          
          <div>
            <label class="block text-gray-700 font-semibold mb-2">فلترة حسب المادة</label>
            <select name="subject" class="input-field">
              <option value="">جميع المواد</option>
              <% subjects.forEach(subject => { %>
                <option value="<%= subject %>" <%= currentSubject === subject ? 'selected' : '' %>>
                  <%= subject %>
                </option>
              <% }); %>
            </select>
          </div>
          
          <div class="md:col-span-3 flex space-x-reverse space-x-4">
            <button type="submit" class="btn-primary">
              <i class="fas fa-search ml-2"></i>
              بحث
            </button>
            <a href="/student/lessons" class="btn-secondary">
              <i class="fas fa-redo ml-2"></i>
              إعادة تعيين
            </a>
          </div>
        </form>
      </div>
      
      <!-- قائمة الدروس -->
      <% if (lessons.length === 0) { %>
        <div class="card p-12 text-center">
          <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
          <p class="text-xl text-gray-500">لا توجد دروس متاحة</p>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% lessons.forEach(lesson => { %>
            <div class="card hover:shadow-xl transition-shadow">
              <div class="p-6">
                <div class="flex items-start justify-between mb-3">
                  <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-semibold">
                    <%= lesson.subject %>
                  </span>
                  <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs">
                    <%= lesson.class %>
                  </span>
                </div>
                
                <h3 class="text-xl font-bold text-gray-800 mb-3 line-clamp-2">
                  <%= lesson.title %>
                </h3>
                
                <p class="text-gray-600 mb-4 line-clamp-3 text-sm">
                  <%= lesson.description %>
                </p>
                
                <div class="border-t border-gray-200 pt-4 mb-4">
                  <div class="flex items-center justify-between text-sm text-gray-500 mb-2">
                    <div class="flex items-center">
                      <i class="fas fa-user-tie ml-2 text-primary-600"></i>
                      <span><%= lesson.teacher.name %></span>
                    </div>
                    <div class="flex items-center">
                      <i class="fas fa-calendar ml-1 text-gray-400"></i>
                      <%= new Date(lesson.createdAt).toLocaleDateString('ar-TN') %>
                    </div>
                  </div>
                  
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <div class="flex items-center space-x-reverse space-x-3">
                      <span><i class="fas fa-eye ml-1"></i> <%= lesson.views %></span>
                      <span><i class="fas fa-download ml-1"></i> <%= lesson.downloads %></span>
                    </div>
                    <div class="flex items-center">
                      <i class="fas fa-file-<%= lesson.fileType === 'pdf' ? 'pdf text-red-500' : lesson.fileType === 'ppt' || lesson.fileType === 'pptx' ? 'powerpoint text-orange-500' : 'word text-blue-500' %> ml-1"></i>
                      <span class="uppercase"><%= lesson.fileType %></span>
                    </div>
                  </div>
                </div>
                
                <div class="grid grid-cols-2 gap-3">
                  <a href="/student/lesson/<%= lesson.id %>" class="btn-primary text-center text-sm">
                    <i class="fas fa-eye ml-2"></i>
                    عرض
                  </a>
                  <a href="/student/download/<%= lesson.id %>" class="btn-secondary text-center text-sm">
                    <i class="fas fa-download ml-2"></i>
                    تحميل
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
      
      <div class="mt-8 text-center">
        <p class="text-gray-600">
          إجمالي الدروس: <span class="font-bold text-primary-600"><%= lessons.length %></span>
        </p>
      </div>
    </div>
  </section>
  
  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
