<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>
  
  <section class="py-8">
    <div class="container mx-auto px-4">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
          <i class="fas fa-bell ml-2 text-orange-600"></i>
          الإشعارات
        </h1>
        <p class="text-gray-600">تابع جميع التحديثات والإشعارات</p>
      </div>
      
      <%- include('../partials/messages') %>
      
      <div class="card">
        <% if (notifications.length === 0) { %>
          <div class="p-12 text-center">
            <i class="fas fa-bell-slash text-6xl text-gray-300 mb-4"></i>
            <p class="text-xl text-gray-500">لا توجد إشعارات</p>
          </div>
        <% } else { %>
          <div class="divide-y divide-gray-200">
            <% notifications.forEach(notif => { %>
              <div class="p-6 hover:bg-gray-50 transition-colors <%= !notif.isRead ? 'bg-blue-50' : '' %>">
                <div class="flex items-start">
                  <div class="flex-shrink-0 ml-4">
                    <div class="w-12 h-12 rounded-full <%= !notif.isRead ? 'bg-orange-100' : 'bg-gray-100' %> flex items-center justify-center">
                      <i class="fas fa-bell <%= !notif.isRead ? 'text-orange-600' : 'text-gray-400' %> text-xl"></i>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-start justify-between mb-2">
                      <h3 class="text-lg font-bold text-gray-800"><%= notif.title %></h3>
                      <% if (!notif.isRead) { %>
                        <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-xs font-semibold">
                          جديد
                        </span>
                      <% } %>
                    </div>
                    <p class="text-gray-700 mb-3"><%= notif.message %></p>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500">
                        <i class="fas fa-clock ml-1"></i>
                        <%= new Date(notif.createdAt).toLocaleString('ar-TN') %>
                      </span>
                      <% if (!notif.isRead) { %>
                        <form action="/student/notifications/<%= notif.id %>/read" method="POST" class="inline">
                          <button type="submit" class="text-primary-600 hover:text-primary-800 text-sm font-semibold">
                            <i class="fas fa-check ml-1"></i>
                            وضع علامة كمقروء
                          </button>
                        </form>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
      
      <div class="mt-6 text-center">
        <a href="/student/dashboard" class="text-primary-600 hover:text-primary-800 font-semibold">
          <i class="fas fa-arrow-right ml-2"></i>
          العودة إلى لوحة التحكم
        </a>
      </div>
    </div>
  </section>
  
  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
