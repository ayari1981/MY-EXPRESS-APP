<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>
  
  <section class="py-8">
    <div class="container mx-auto px-4">
      <!-- العودة -->
      <div class="mb-6">
        <a href="/student/lessons" class="text-primary-600 hover:text-primary-800 font-semibold">
          <i class="fas fa-arrow-right ml-2"></i>
          العودة إلى الدروس
        </a>
      </div>
      
      <%- include('../partials/messages') %>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- المحتوى الرئيسي -->
        <div class="lg:col-span-2">
          <!-- تفاصيل الدرس -->
          <div class="card mb-8">
            <div class="p-8">
              <div class="flex items-center space-x-reverse space-x-3 mb-4">
                <span class="bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-semibold">
                  <%= lesson.subject %>
                </span>
                <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-semibold">
                  <%= lesson.class %>
                </span>
              </div>
              
              <h1 class="text-4xl font-bold text-gray-800 mb-4"><%= lesson.title %></h1>
              
              <div class="flex items-center justify-between text-gray-600 mb-6 pb-6 border-b border-gray-200">
                <div class="flex items-center">
                  <i class="fas fa-user-tie ml-2 text-primary-600"></i>
                  <span class="font-semibold"><%= lesson.teacher.name %></span>
                </div>
                <div class="flex items-center space-x-reverse space-x-4 text-sm">
                  <span><i class="fas fa-calendar ml-1"></i> <%= new Date(lesson.createdAt).toLocaleDateString('fr-FR') %></span>
                  <span><i class="fas fa-eye ml-1"></i> <%= lesson.views %> مشاهدة</span>
                  <span><i class="fas fa-download ml-1"></i> <%= lesson.downloads %> تحميل</span>
                </div>
              </div>
              
              <div class="prose prose-lg max-w-none mb-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-3">وصف الدرس</h2>
                <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= lesson.description %></p>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">معلومات الملف</h3>
                <div class="grid grid-cols-2 gap-4 text-sm">
                  <div>
                    <p class="text-gray-600 mb-1">اسم الملف</p>
                    <p class="text-gray-800 font-semibold"><%= lesson.fileName %></p>
                  </div>
                  <div>
                    <p class="text-gray-600 mb-1">نوع الملف</p>
                    <p class="text-gray-800 font-semibold uppercase">
                      <i class="fas fa-file-<%= lesson.fileType === 'pdf' ? 'pdf text-red-500' : lesson.fileType === 'ppt' || lesson.fileType === 'pptx' ? 'powerpoint text-orange-500' : 'word text-blue-500' %> ml-2"></i>
                      <%= lesson.fileType %>
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="flex space-x-reverse space-x-4">
                <a href="/student/download/<%= lesson.id %>" class="flex-1 btn-primary text-center text-lg">
                  <i class="fas fa-download ml-2"></i>
                  تحميل الدرس
                </a>
                <button onclick="window.print()" class="btn-secondary">
                  <i class="fas fa-print"></i>
                </button>
              </div>
            </div>
          </div>
          
          <!-- قسم التعليقات -->
          <div class="card">
            <div class="p-6 border-b border-gray-200">
              <h2 class="text-2xl font-bold text-gray-800">
                <i class="fas fa-comments ml-2 text-primary-600"></i>
                التعليقات (<%= comments.length %>)
              </h2>
            </div>
            
            <!-- نموذج إضافة تعليق -->
            <div class="p-6 border-b border-gray-200 bg-gray-50">
              <form action="/student/comment/<%= lesson.id %>" method="POST">
                <label class="block text-gray-700 font-semibold mb-2">أضف تعليقك</label>
                <textarea 
                  name="content" 
                  rows="4" 
                  class="input-field mb-4"
                  placeholder="شارك رأيك أو استفسارك حول الدرس..."
                  required
                ></textarea>
                <button type="submit" class="btn-primary">
                  <i class="fas fa-paper-plane ml-2"></i>
                  إرسال التعليق
                </button>
                <p class="text-sm text-gray-500 mt-2">
                  <i class="fas fa-info-circle ml-1"></i>
                  سيتم مراجعة تعليقك قبل نشره
                </p>
              </form>
            </div>
            
            <!-- قائمة التعليقات -->
            <div class="p-6">
              <% if (comments.length === 0) { %>
                <div class="text-center py-12">
                  <i class="fas fa-comment-slash text-6xl text-gray-300 mb-4"></i>
                  <p class="text-xl text-gray-500">لا توجد تعليقات بعد</p>
                  <p class="text-gray-400 mt-2">كن أول من يعلق على هذا الدرس</p>
                </div>
              <% } else { %>
                <div class="space-y-6">
                  <% comments.forEach(comment => { %>
                    <div class="border-b border-gray-200 pb-6 last:border-b-0">
                      <div class="flex items-start">
                        <div class="flex-shrink-0 ml-4">
                          <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                            <i class="fas fa-user text-primary-600 text-xl"></i>
                          </div>
                        </div>
                        <div class="flex-1">
                          <div class="flex items-center justify-between mb-2">
                            <h4 class="font-bold text-gray-800"><%= comment.user.name %></h4>
                            <span class="text-sm text-gray-500">
                              <i class="fas fa-clock ml-1"></i>
                              <%= new Date(comment.createdAt).toLocaleDateString('fr-FR') %>
                            </span>
                          </div>
                          <p class="text-gray-700 leading-relaxed"><%= comment.content %></p>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        
        <!-- الشريط الجانبي -->
        <div class="lg:col-span-1">
          <!-- معلومات الأستاذ -->
          <div class="card mb-6">
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-user-tie ml-2 text-primary-600"></i>
                الأستاذ
              </h3>
              <div class="text-center">
                <div class="w-24 h-24 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-user-tie text-primary-600 text-4xl"></i>
                </div>
                <h4 class="font-bold text-gray-800 text-lg mb-1"><%= lesson.teacher.name %></h4>
                <p class="text-gray-600 text-sm"><%= lesson.teacher.email %></p>
              </div>
            </div>
          </div>
          
          <!-- إجراءات سريعة -->
          <div class="card mb-6">
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-bolt ml-2 text-primary-600"></i>
                إجراءات سريعة
              </h3>
              <div class="space-y-3">
                <a href="/student/download/<%= lesson.id %>" class="block w-full btn-primary text-center">
                  <i class="fas fa-download ml-2"></i>
                  تحميل الدرس
                </a>
                <button onclick="window.print()" class="block w-full btn-secondary text-center">
                  <i class="fas fa-print ml-2"></i>
                  طباعة الصفحة
                </button>
                <a href="/student/lessons" class="block w-full btn-secondary text-center">
                  <i class="fas fa-books ml-2"></i>
                  الدروس الأخرى
                </a>
              </div>
            </div>
          </div>
          
          <!-- مشاركة -->
          <div class="card">
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-share-alt ml-2 text-primary-600"></i>
                مشاركة
              </h3>
              <div class="flex space-x-reverse space-x-2">
                <button onclick="shareOnFacebook()" class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                  <i class="fab fa-facebook-f"></i>
                </button>
                <button onclick="shareOnTwitter()" class="flex-1 bg-sky-500 text-white px-4 py-2 rounded-lg hover:bg-sky-600 transition-colors">
                  <i class="fab fa-twitter"></i>
                </button>
                <button onclick="copyLink()" class="flex-1 bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                  <i class="fas fa-link"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
  <script>
    function shareOnFacebook() {
      window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(window.location.href), '_blank');
    }
    
    function shareOnTwitter() {
      window.open('https://twitter.com/intent/tweet?url=' + encodeURIComponent(window.location.href) + '&text=' + encodeURIComponent('<%= lesson.title %>'), '_blank');
    }
    
    function copyLink() {
      navigator.clipboard.writeText(window.location.href).then(() => {
        alert('تم نسخ الرابط بنجاح!');
      });
    }
  </script>
</body>
</html>
