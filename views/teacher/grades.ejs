<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - المدرسة الإعدادية أبو القاسم الشابي</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <section class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto px-4">
      <div class="mb-6 flex justify-between items-center flex-wrap gap-4">
        <h1 class="text-3xl font-bold text-gray-800">
          <i class="fas fa-chart-line ml-2 text-primary-600"></i>
          إدارة النتائج
        </h1>
        <div class="flex gap-3">
          <a href="/teacher/grades/add" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition-all">
            <i class="fas fa-plus ml-2"></i>
            إضافة نتائج
          </a>
          <button onclick="showPublishModal()" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition-all">
            <i class="fas fa-eye ml-2"></i>
            نشر نتائج
          </button>
        </div>
      </div>

      <%- include('../partials/messages') %>

      <!-- الإحصائيات -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">إجمالي النتائج</p>
              <p class="text-3xl font-bold text-primary-600"><%= stats.totalGrades %></p>
            </div>
            <div class="text-5xl text-primary-200">
              <i class="fas fa-clipboard-list"></i>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">نتائج منشورة</p>
              <p class="text-3xl font-bold text-green-600"><%= stats.publishedGrades %></p>
            </div>
            <div class="text-5xl text-green-200">
              <i class="fas fa-eye"></i>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">نتائج غير منشورة</p>
              <p class="text-3xl font-bold text-orange-600"><%= stats.unpublishedGrades %></p>
            </div>
            <div class="text-5xl text-orange-200">
              <i class="fas fa-eye-slash"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- فلاتر البحث -->
      <div class="card p-6 mb-6">
        <form method="GET" action="/teacher/grades" class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label class="block text-gray-700 font-semibold mb-2">القسم (المستوى)</label>
            <select name="classLevel" class="input-field">
              <option value="">جميع الأقسام</option>
              <option value="7 أساسي" <%= filters.classLevel === '7 أساسي' ? 'selected' : '' %>>7 أساسي</option>
              <option value="8 أساسي" <%= filters.classLevel === '8 أساسي' ? 'selected' : '' %>>8 أساسي</option>
              <option value="9 أساسي" <%= filters.classLevel === '9 أساسي' ? 'selected' : '' %>>9 أساسي</option>
            </select>
          </div>
          
          <div>
            <label class="block text-gray-700 font-semibold mb-2">رقم الصف</label>
            <select name="classNumber" class="input-field">
              <option value="">جميع الصفوف</option>
              <option value="1" <%= filters.classNumber === '1' ? 'selected' : '' %>>1</option>
              <option value="2" <%= filters.classNumber === '2' ? 'selected' : '' %>>2</option>
              <option value="3" <%= filters.classNumber === '3' ? 'selected' : '' %>>3</option>
              <option value="4" <%= filters.classNumber === '4' ? 'selected' : '' %>>4</option>
              <option value="5" <%= filters.classNumber === '5' ? 'selected' : '' %>>5</option>
              <option value="6" <%= filters.classNumber === '6' ? 'selected' : '' %>>6</option>
              <option value="7" <%= filters.classNumber === '7' ? 'selected' : '' %>>7</option>
              <option value="8" <%= filters.classNumber === '8' ? 'selected' : '' %>>8</option>
              <option value="9" <%= filters.classNumber === '9' ? 'selected' : '' %>>9</option>
              <option value="10" <%= filters.classNumber === '10' ? 'selected' : '' %>>10</option>
            </select>
          </div>
          
          <div>
            <label class="block text-gray-700 font-semibold mb-2">الثلاثي</label>
            <select name="semester" class="input-field">
              <option value="">جميع الثلاثيات</option>
              <option value="الفصل الأول" <%= filters.semester === 'الفصل الأول' ? 'selected' : '' %>>الفصل الأول</option>
              <option value="الفصل الثاني" <%= filters.semester === 'الفصل الثاني' ? 'selected' : '' %>>الفصل الثاني</option>
              <option value="الفصل الثالث" <%= filters.semester === 'الفصل الثالث' ? 'selected' : '' %>>الفصل الثالث</option>
            </select>
          </div>
          
          <div class="flex items-end gap-3">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition-colors flex-1">
              <i class="fas fa-filter ml-2"></i>
              بحث
            </button>
          </div>
        </form>
        
        <!-- زر الطباعة الاحترافية خارج الفورم -->
        <div class="mt-4">
          <% 
            // إنشاء رابط الطباعة الاحترافية مع الفلاتر الحالية
            let printUrl = `/teacher/grades/print?`;
            let urlParams = [];
            
            if (filters.classLevel) {
              urlParams.push(`classLevel=${encodeURIComponent(filters.classLevel)}`);
            }
            if (filters.classNumber) {
              urlParams.push(`classNumber=${encodeURIComponent(filters.classNumber)}`);
            }
            if (filters.subject) {
              urlParams.push(`subject=${encodeURIComponent(filters.subject)}`);
            }
            if (filters.semester) {
              urlParams.push(`semester=${encodeURIComponent(filters.semester)}`);
            }
            
            printUrl += urlParams.join('&');
          %>
          
          <a href="<%= printUrl %>" target="_blank" 
             class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition-colors inline-block">
            <i class="fas fa-print ml-2"></i>
            طباعة احترافية
          </a>
        </div>
      </div>

      <!-- جدول النتائج -->
      <div class="card">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-2xl font-bold text-gray-800">النتائج</h2>
        </div>
        
        <div class="overflow-x-auto">
          <% if (grades.length === 0) { %>
            <div class="p-8 text-center text-gray-500">
              <i class="fas fa-clipboard text-6xl mb-4 text-gray-300"></i>
              <p class="text-xl">لا توجد نتائج</p>
              <a href="/teacher/grades/add" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md mt-4 inline-block">
                إضافة نتائج جديدة
              </a>
            </div>
          <% } else { %>
            <table id="gradesTable" class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">التلميذ</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">القسم</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">المادة</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">النوع</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">العلامة</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الفصل</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الحالة</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الإجراءات</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% grades.forEach(grade => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                      <div class="font-semibold text-gray-800">
                        <%= grade.studentFirstName %> <%= grade.studentLastName %>
                      </div>
                    </td>
                    <td class="px-6 py-4 text-gray-600"><%= grade.studentClass %></td>
                    <td class="px-6 py-4 text-gray-600"><%= grade.subject %></td>
                    <td class="px-6 py-4">
                      <% if (grade.gradeType === 'فرض عادي') { %>
                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm">فرض عادي</span>
                      <% } else if (grade.gradeType === 'فرض تأليفي') { %>
                        <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded text-sm">فرض تأليفي</span>
                      <% } else { %>
                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">شفاهي</span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4">
                      <span class="font-bold text-lg <%= grade.gradeValue >= 10 ? 'text-green-600' : 'text-red-600' %>">
                        <%= grade.gradeValue %> / <%= grade.maxGrade %>
                      </span>
                    </td>
                    <td class="px-6 py-4 text-gray-600"><%= grade.semester %></td>
                    <td class="px-6 py-4">
                      <% if (grade.isPublished) { %>
                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
                          <i class="fas fa-eye ml-1"></i> منشور
                        </span>
                      <% } else { %>
                        <span class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm">
                          <i class="fas fa-eye-slash ml-1"></i> غير منشور
                        </span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex space-x-reverse space-x-2">
                        <button onclick="editGrade(<%= grade.id %>, <%= grade.gradeValue %>, &quot;<%= (grade.remarks || '').replace(/"/g, '&quot;') %>&quot;)" 
                                class="text-blue-600 hover:text-blue-800" title="تعديل">
                          <i class="fas fa-edit"></i>
                        </button>
                        <form action="/teacher/grades/publish/<%= grade.id %>" method="POST" class="inline">
                          <button type="submit" class="text-green-600 hover:text-green-800" 
                                  title="<%= grade.isPublished ? 'إلغاء النشر' : 'نشر' %>">
                            <i class="fas fa-<%= grade.isPublished ? 'eye-slash' : 'eye' %>"></i>
                          </button>
                        </form>
                        <form action="/teacher/grades/delete/<%= grade.id %>" method="POST" class="inline" 
                              onsubmit="return confirm('هل أنت متأكد من حذف هذه النتيجة؟')">
                          <button type="submit" class="text-red-600 hover:text-red-800" title="حذف">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <!-- Modal تعديل -->
  <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
      <h3 class="text-2xl font-bold mb-4">تعديل النتيجة</h3>
      <form id="editForm" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold mb-2">العلامة</label>
          <input type="number" name="gradeValue" id="editGradeValue" 
                 class="input-field" min="0" max="20" step="0.25" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold mb-2">ملاحظات</label>
          <textarea name="remarks" id="editRemarks" class="input-field" rows="3"></textarea>
        </div>
        <div class="flex justify-end space-x-reverse space-x-3">
          <button type="button" onclick="closeEditModal()" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg">إلغاء</button>
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg">حفظ</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal نشر -->
  <div id="publishModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
      <h3 class="text-2xl font-bold mb-4">نشر نتائج</h3>
      <form action="/teacher/grades/publish-all" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold mb-2">القسم</label>
          <select name="classLevel" class="input-field">
            <option value="">جميع الأقسام</option>
            <option value="7 أساسي">7 أساسي</option>
            <option value="8 أساسي">8 أساسي</option>
            <option value="9 أساسي">9 أساسي</option>
          </select>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold mb-2">الفصل</label>
          <select name="semester" class="input-field">
            <option value="">جميع الفصول</option>
            <option value="الفصل الأول">الفصل الأول</option>
            <option value="الفصل الثاني">الفصل الثاني</option>
            <option value="الفصل الثالث">الفصل الثالث</option>
          </select>
        </div>
        <div class="flex justify-end space-x-reverse space-x-3">
          <button type="button" onclick="closePublishModal()" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg">إلغاء</button>
          <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg">نشر</button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script>
    function editGrade(id, value, remarks) {
      document.getElementById('editForm').action = '/teacher/grades/edit/' + id;
      document.getElementById('editGradeValue').value = value;
      document.getElementById('editRemarks').value = remarks;
      document.getElementById('editModal').classList.remove('hidden');
    }

    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }

    function showPublishModal() {
      document.getElementById('publishModal').classList.remove('hidden');
    }

    function closePublishModal() {
      document.getElementById('publishModal').classList.add('hidden');
    }
  </script>

  <script src="/js/main.js"></script>
</body>
</html>
    @media print {
      /* إخفاء العناصر غير الضرورية عند الطباعة */
      nav,
      footer,
      button:not(.print-only),
      a:not(.print-only),
      form,
      .sidebar,
      .bg-gray-100,
      .mb-6:first-child,
      .filters-container,
      .action-buttons,
      .search-container {
        display: none !important;
      }

      /* تحسين عرض الجدول للطباعة */
      body {
        background: white !important;
        padding: 15px;
        margin: 0;
        font-family: Arial, sans-serif;
      }

      .main-content {
        width: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
      }

      /* تنسيق الجدول للطباعة */
      table {
        width: 100% !important;
        border-collapse: collapse !important;
        font-size: 11px !important;
        margin-top: 15px !important;
      }

      table th,
      table td {
        border: 1px solid #333 !important;
        padding: 6px 4px !important;
        text-align: center !important;
      }

      table th {
        background-color: #f0f0f0 !important;
        font-weight: bold !important;
        color: #000 !important;
      }

      /* إخفاء عمود الإجراءات */
      table th:last-child,
      table td:last-child {
        display: none !important;
      }

      /* تحسين عرض الأرقام */
      .grade-cell {
        font-weight: bold !important;
        color: #000 !important;
      }

      /* ضمان عدم قطع الجدول عبر الصفحات */
      table {
        page-break-inside: avoid;
      }

      /* التأكد من ظهور المحتوى فقط */
      .container {
        max-width: none !important;
        width: 100% !important;
      }
    }

    /* باقي التنسيقات */

      .card {
        box-shadow: none !important;
        border: 1px solid #ddd;
        page-break-inside: avoid;
      }

      table {
        border-collapse: collapse;
        width: 100%;
        page-break-inside: auto;
      }

      tr {
        page-break-inside: avoid;
        page-break-after: auto;
      }

      th, td {
        border: 1px solid #000 !important;
        padding: 8px !important;
        text-align: right;
        font-size: 11px;
      }

      thead {
        background-color: #e0e0e0 !important;
      }

      /* إخفاء عمود الإجراءات */
      th:last-child,
      td:last-child {
        display: none !important;
      }

      /* إضافة ترويسة للطباعة */
      @page {
        margin: 1cm;
      }

      .print-header {
        display: block !important;
        text-align: center;
        margin-bottom: 30px;
        border-bottom: 2px solid #000;
        padding-bottom: 15px;
      }

      .print-header h1 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #000;
      }

      .print-header h2 {
        font-size: 18px;
        margin-bottom: 15px;
        color: #333;
      }

      .print-header .print-info {
        font-size: 14px;
        color: #666;
      }

      .print-header .print-info p {
        margin: 5px 0;
      }
    }

    .print-header {
      display: none;
    }
  </style>
  <script src="/js/main.js"></script>
</body>
</html>
