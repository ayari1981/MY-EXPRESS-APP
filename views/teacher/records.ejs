<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>سجلات الطلاب - المدرسة الإعدادية</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>

  <section class="py-8 min-h-screen">
    <div class="container mx-auto px-4">
      <!-- العنوان -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
          <i class="fas fa-clipboard-list ml-2 text-orange-600"></i>
          سجلات الطلاب
        </h1>
        <p class="text-gray-600">إدارة الغيابات والعقوبات والملاحظات</p>
      </div>

      <%- include('../partials/messages') %>

      <!-- الإحصائيات -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm mb-1">إجمالي السجلات</p>
              <p class="text-3xl font-bold text-gray-800"><%= stats.totalRecords %></p>
            </div>
            <div class="bg-blue-100 rounded-full p-4">
              <i class="fas fa-clipboard-list text-blue-600 text-2xl"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm mb-1">الغيابات</p>
              <p class="text-3xl font-bold text-orange-600"><%= stats.absences %></p>
            </div>
            <div class="bg-orange-100 rounded-full p-4">
              <i class="fas fa-user-times text-orange-600 text-2xl"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm mb-1">العقوبات</p>
              <p class="text-3xl font-bold text-red-600"><%= stats.punishments %></p>
            </div>
            <div class="bg-red-100 rounded-full p-4">
              <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500 text-sm mb-1">الملاحظات</p>
              <p class="text-3xl font-bold text-green-600"><%= stats.notes %></p>
            </div>
            <div class="bg-green-100 rounded-full p-4">
              <i class="fas fa-sticky-note text-green-600 text-2xl"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- الفلاتر وزر الإضافة -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end gap-6">
          <!-- نموذج الفلاتر -->
          <form method="GET" action="/teacher/records" class="flex-1 w-full">
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">القسم</label>
                <select name="classLevel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">الكل</option>
                  <option value="السابعة أساسي" <%= filters.classLevel === 'السابعة أساسي' ? 'selected' : '' %>>السابعة أساسي</option>
                  <option value="الثامنة أساسي" <%= filters.classLevel === 'الثامنة أساسي' ? 'selected' : '' %>>الثامنة أساسي</option>
                  <option value="التاسعة أساسي" <%= filters.classLevel === 'التاسعة أساسي' ? 'selected' : '' %>>التاسعة أساسي</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">رقم الصف</label>
                <select name="classNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">الكل</option>
                  <% for(let i = 1; i <= 10; i++) { %>
                    <option value="<%= i %>" <%= filters.classNumber == i ? 'selected' : '' %>><%= i %></option>
                  <% } %>
                </select>
              </div>

              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">نوع السجل</label>
                <select name="recordType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">الكل</option>
                  <option value="absence" <%= filters.recordType === 'absence' ? 'selected' : '' %>>غياب</option>
                  <option value="punishment" <%= filters.recordType === 'punishment' ? 'selected' : '' %>>عقوبة</option>
                  <option value="note" <%= filters.recordType === 'note' ? 'selected' : '' %>>ملاحظة</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">من تاريخ</label>
                <input type="date" name="startDate" value="<%= filters.startDate || '' %>" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              </div>

              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">إلى تاريخ</label>
                <input type="date" name="endDate" value="<%= filters.endDate || '' %>" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              </div>
            </div>
            
            <div class="mt-6 flex gap-3">
              <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg transition shadow-md">
                <i class="fas fa-filter ml-2"></i>تصفية
              </button>
              <a href="/teacher/records" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-2 rounded-lg transition shadow-md">
                <i class="fas fa-redo ml-2"></i>إعادة تعيين
              </a>
            </div>
          </form>

          <!-- زر إضافة سجل -->
          <div class="w-full lg:w-auto">
            <a href="/teacher/records/add" class="block w-full lg:w-auto bg-green-600 hover:bg-green-700 text-white font-semibold px-8 py-3 rounded-lg transition shadow-md text-center">
              <i class="fas fa-plus ml-2"></i>إضافة سجل جديد
            </a>
          </div>
        </div>
      </div>

      <!-- جدول السجلات -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <% if (records.length === 0) { %>
          <div class="p-12 text-center">
            <i class="fas fa-inbox text-6xl mb-4 text-gray-300"></i>
            <p class="text-xl text-gray-500 font-semibold">لا توجد سجلات حالياً</p>
            <p class="text-gray-400 mt-2">ابدأ بإضافة سجل جديد للطلاب</p>
          </div>
        <% } else { %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                <tr>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">التاريخ</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">الطالب</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">القسم</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">نوع السجل</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">التفاصيل</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">الوصف</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">إشعار الولي</th>
                  <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">الإجراءات</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
              <% records.forEach(record => { %>
                <tr class="hover:bg-gray-50 transition">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= new Date(record.date).toLocaleDateString('ar-TN') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                    <%= record.student ? record.student.name : 'غير معروف' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <%= record.student ? record.student.studentClass : '' %> - <%= record.student ? record.student.classNumber : '' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (record.recordType === 'absence') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-bold rounded-full bg-orange-100 text-orange-800">
                        <i class="fas fa-user-times ml-1"></i> غياب
                      </span>
                    <% } else if (record.recordType === 'punishment') { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-bold rounded-full bg-red-100 text-red-800">
                        <i class="fas fa-exclamation-triangle ml-1"></i> عقوبة
                      </span>
                    <% } else { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-bold rounded-full bg-green-100 text-green-800">
                        <i class="fas fa-sticky-note ml-1"></i> ملاحظة
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600">
                    <% if (record.recordType === 'absence' && record.absenceType) { %>
                      <span class="<%= record.absenceType === 'justified' ? 'text-green-600' : 'text-red-600' %> font-semibold">
                        <%= record.absenceType === 'justified' ? 'مبرر' : 'غير مبرر' %>
                      </span>
                    <% } else if (record.recordType === 'punishment') { %>
                      <% 
                        const punishmentTypes = {
                          'warning': 'إنذار',
                          'detention': 'توقيف',
                          'suspension': 'طرد مؤقت',
                          'other': 'أخرى'
                        };
                        const severities = {
                          'minor': 'بسيطة',
                          'medium': 'متوسطة',
                          'severe': 'شديدة'
                        };
                      %>
                      <div class="font-semibold"><%= punishmentTypes[record.punishmentType] || record.punishmentType %></div>
                      <span class="text-xs text-gray-500">(<%= severities[record.punishmentSeverity] || '' %>)</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600 max-w-xs">
                    <div class="truncate"><%= record.description || '-' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (record.parentNotified) { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        <i class="fas fa-check ml-1"></i> تم
                      </span>
                    <% } else { %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-600">
                        لم يتم
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex gap-2">
                      <button onclick='openEditModal(<%= record.id %>, `<%= (record.description || "").replace(/`/g, "\\`").replace(/\n/g, " ") %>`, `<%= (record.notes || "").replace(/`/g, "\\`").replace(/\n/g, " ") %>`)' 
                              class="text-blue-600 hover:text-blue-900 hover:bg-blue-50 p-2 rounded transition">
                        <i class="fas fa-edit"></i>
                      </button>
                      <form method="POST" action="/teacher/records/delete/<%= record.id %>" class="inline" 
                            onsubmit="return confirm('هل أنت متأكد من حذف هذا السجل؟')">
                        <button type="submit" class="text-red-600 hover:text-red-900 hover:bg-red-50 p-2 rounded transition">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
    </div>
  </section>

  <!-- Modal تعديل السجل -->
  <div id="editModal" class="fixed inset-0 bg-black bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-6 border w-full max-w-md shadow-2xl rounded-lg bg-white">
      <div class="mt-3">
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
          <i class="fas fa-edit text-blue-600 ml-2"></i>
          تعديل السجل
        </h3>
        <form id="editForm" method="POST">
          <div class="mb-5">
            <label class="block text-sm font-semibold text-gray-700 mb-2">الوصف</label>
            <textarea id="editDescription" name="description" rows="4" 
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="وصف السجل..."></textarea>
          </div>
          <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">ملاحظات</label>
            <textarea id="editNotes" name="notes" rows="3" 
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="ملاحظات إضافية..."></textarea>
          </div>
          <div class="flex gap-3">
            <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition shadow-md">
              <i class="fas fa-save ml-2"></i>حفظ
            </button>
            <button type="button" onclick="closeEditModal()" class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg transition shadow-md">
              <i class="fas fa-times ml-2"></i>إلغاء
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

<script>
function openEditModal(recordId, description, notes) {
  document.getElementById('editForm').action = `/teacher/records/edit/${recordId}`;
  document.getElementById('editDescription').value = description;
  document.getElementById('editNotes').value = notes;
  document.getElementById('editModal').classList.remove('hidden');
}

function closeEditModal() {
  document.getElementById('editModal').classList.add('hidden');
}

// إغلاق Modal عند النقر خارجه
document.getElementById('editModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeEditModal();
  }
});
</script>

</body>
</html>
