<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>إضافة سجل طالب - المدرسة الإعدادية</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>

  <section class="py-8 min-h-screen">
    <div class="container mx-auto px-4">
      <!-- العنوان -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
          <i class="fas fa-plus-circle ml-2 text-green-600"></i>
          إضافة سجل طالب
        </h1>
        <p class="text-gray-600">تسجيل غياب أو عقوبة أو ملاحظة للطالب</p>
      </div>

      <%- include('../partials/messages') %>

      <!-- نموذج الإضافة -->
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-8">
          <form method="POST" action="/teacher/records/add" id="recordForm">
            
            <!-- اختيار الطالب -->
            <div class="bg-blue-50 border-r-4 border-blue-500 p-6 rounded-lg mb-8">
              <h2 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-user-graduate ml-2 text-blue-600"></i>
                معلومات الطالب
              </h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="classLevel" class="block text-sm font-bold text-gray-700 mb-2">
                    القسم <span class="text-red-500">*</span>
                  </label>
                  <select id="classLevel" name="classLevel" required 
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-base">
                    <option value="">اختر القسم</option>
                    <option value="7 أساسي">7 أساسي</option>
                    <option value="8 أساسي">8 أساسي</option>
                    <option value="9 أساسي">9 أساسي</option>
                  </select>
                </div>

                <div>
                  <label for="classNumber" class="block text-sm font-bold text-gray-700 mb-2">
                    رقم الصف
                  </label>
                  <select id="classNumber" name="classNumber" 
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-base">
                    <option value="">الكل</option>
                    <% for(let i = 1; i <= 10; i++) { %>
                      <option value="<%= i %>"><%= i %></option>
                    <% } %>
                  </select>
                </div>
              </div>

              <div class="mt-6">
                <label for="studentId" class="block text-sm font-bold text-gray-700 mb-2">
                  الطالب <span class="text-red-500">*</span>
                </label>
                <select id="studentId" name="studentId" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-base">
                  <option value="">اختر القسم أولاً</option>
                </select>
              </div>
            </div>

            <!-- نوع السجل والتاريخ -->
            <div class="bg-orange-50 border-r-4 border-orange-500 p-6 rounded-lg mb-8">
              <h2 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-clipboard-list ml-2 text-orange-600"></i>
                نوع السجل
              </h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="recordType" class="block text-sm font-bold text-gray-700 mb-2">
                    نوع السجل <span class="text-red-500">*</span>
                  </label>
                  <select id="recordType" name="recordType" required 
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent text-base">
                    <option value="">اختر النوع</option>
                    <option value="absence">غياب</option>
                    <option value="punishment">عقوبة</option>
                    <option value="note">ملاحظة</option>
                  </select>
                </div>

                <div>
                  <label for="date" class="block text-sm font-bold text-gray-700 mb-2">
                    التاريخ <span class="text-red-500">*</span>
                  </label>
                  <input type="date" id="date" name="date" required 
                         value="<%= new Date().toISOString().split('T')[0] %>"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent text-base">
                </div>
              </div>
            </div>

            <!-- حقول الغياب -->
            <div id="absenceFields" class="bg-yellow-50 border-r-4 border-yellow-500 p-6 rounded-lg mb-8 hidden">
              <h2 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-user-times ml-2 text-yellow-600"></i>
                تفاصيل الغياب
              </h2>
              
              <div>
                <label for="absenceType" class="block text-sm font-bold text-gray-700 mb-2">
                  نوع الغياب <span class="text-red-500">*</span>
                </label>
                <select id="absenceType" name="absenceType" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent text-base">
                  <option value="">اختر النوع</option>
                  <option value="justified">غياب مبرر</option>
                  <option value="unjustified">غياب غير مبرر</option>
                </select>
              </div>
            </div>

            <!-- حقول العقوبة -->
            <div id="punishmentFields" class="bg-red-50 border-r-4 border-red-500 p-6 rounded-lg mb-8 hidden">
              <h2 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-exclamation-triangle ml-2 text-red-600"></i>
                تفاصيل العقوبة
              </h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="punishmentType" class="block text-sm font-bold text-gray-700 mb-2">
                    نوع العقوبة <span class="text-red-500">*</span>
                  </label>
                  <select id="punishmentType" name="punishmentType" 
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-base">
                    <option value="">اختر النوع</option>
                    <option value="warning">إنذار</option>
                    <option value="detention">توقيف</option>
                    <option value="suspension">طرد مؤقت</option>
                    <option value="other">أخرى</option>
                  </select>
                </div>

                <div>
                  <label for="punishmentSeverity" class="block text-sm font-bold text-gray-700 mb-2">
                    درجة الخطورة <span class="text-red-500">*</span>
                  </label>
                  <select id="punishmentSeverity" name="punishmentSeverity" 
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent text-base">
                    <option value="">اختر الدرجة</option>
                    <option value="minor">بسيطة</option>
                    <option value="medium">متوسطة</option>
                    <option value="severe">شديدة</option>
                  </select>
                </div>
              </div>
                </div>

            <!-- الوصف والملاحظات -->
            <div class="bg-gray-50 border-r-4 border-gray-400 p-6 rounded-lg mb-8">
              <h2 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-file-alt ml-2 text-gray-600"></i>
                التفاصيل الإضافية
              </h2>
              
              <div class="mb-6">
                <label for="description" class="block text-sm font-bold text-gray-700 mb-2">
                  الوصف
                </label>
                <textarea id="description" name="description" rows="4"
                          placeholder="وصف تفصيلي للسجل..."
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-500 focus:border-transparent text-base resize-none"></textarea>
              </div>

              <div>
                <label for="notes" class="block text-sm font-bold text-gray-700 mb-2">
                  ملاحظات إضافية
                </label>
                <textarea id="notes" name="notes" rows="3"
                          placeholder="ملاحظات أخرى..."
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-500 focus:border-transparent text-base resize-none"></textarea>
              </div>
            </div>

            <!-- الأزرار -->
            <div class="flex gap-4">
              <!-- زر الحفظ بلون أخضر واضح -->
              <button type="submit" id="saveButton" 
                      class="flex-1 bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-4 rounded-lg hover:from-green-600 hover:to-green-700 transition-all transform hover:scale-105 shadow-lg text-lg font-bold border-2 border-green-400">
                <i class="fas fa-save ml-2"></i>
                <span id="saveButtonText">حفظ السجل</span>
              </button>
              <a href="/teacher/records" class="flex-1 bg-red-500 text-white px-6 py-4 rounded-lg hover:bg-red-600 transition-all text-center shadow-md text-lg font-bold">
                <i class="fas fa-times ml-2"></i>إلغاء
              </a>
            </div>
          </form>
    </div>
  </div>
</div>

<script>
// تحميل الطلاب عند تغيير القسم أو رقم الصف
document.getElementById('classLevel').addEventListener('change', loadStudents);
document.getElementById('classNumber').addEventListener('change', loadStudents);

// إظهار/إخفاء الحقول حسب نوع السجل
document.getElementById('recordType').addEventListener('change', function() {
  const recordType = this.value;
  const absenceFields = document.getElementById('absenceFields');
  const punishmentFields = document.getElementById('punishmentFields');
  const saveButton = document.getElementById('saveButton');
  const saveButtonText = document.getElementById('saveButtonText');
  
  // إخفاء جميع الحقول
  absenceFields.classList.add('hidden');
  punishmentFields.classList.add('hidden');
  
  // إعادة تعيين الألوان والنصوص
  saveButton.className = 'flex-1 text-white px-6 py-4 rounded-lg transition-all transform hover:scale-105 shadow-lg text-lg font-bold';
  
  // إظهار الحقول المطلوبة وتغيير لون الزر
  if (recordType === 'absence') {
    absenceFields.classList.remove('hidden');
    document.getElementById('absenceType').required = true;
    document.getElementById('punishmentType').required = false;
    document.getElementById('punishmentSeverity').required = false;
    // لون أزرق للغياب
    saveButton.className += ' bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 border-2 border-blue-400';
    saveButtonText.textContent = 'حفظ الغياب';
  } else if (recordType === 'punishment') {
    punishmentFields.classList.remove('hidden');
    document.getElementById('absenceType').required = false;
    document.getElementById('punishmentType').required = true;
    document.getElementById('punishmentSeverity').required = true;
    // لون أحمر للعقوبة
    saveButton.className += ' bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 border-2 border-red-400';
    saveButtonText.textContent = 'حفظ العقوبة';
  } else {
    document.getElementById('absenceType').required = false;
    document.getElementById('punishmentType').required = false;
    document.getElementById('punishmentSeverity').required = false;
    // لون أخضر للملاحظة
    saveButton.className += ' bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 border-2 border-green-400';
    saveButtonText.textContent = 'حفظ السجل';
  }
});

async function loadStudents() {
  const classLevel = document.getElementById('classLevel').value;
  const classNumber = document.getElementById('classNumber').value;
  const studentSelect = document.getElementById('studentId');
  
  if (!classLevel) {
    studentSelect.innerHTML = '<option value="">اختر القسم أولاً</option>';
    return;
  }
  
  studentSelect.innerHTML = '<option value="">جاري التحميل...</option>';
  
  try {
    let url = `/teacher/grades/students?classLevel=${encodeURIComponent(classLevel)}`;
    if (classNumber) {
      url += `&classNumber=${classNumber}`;
    }
    
    const response = await fetch(url);
    const students = await response.json();
    
    if (students.length === 0) {
      studentSelect.innerHTML = '<option value="">لا يوجد طلاب في هذا القسم</option>';
      return;
    }
    
    studentSelect.innerHTML = '<option value="">اختر الطالب</option>';
    students.forEach(student => {
      const option = document.createElement('option');
      option.value = student.id;
      option.textContent = `${student.firstName} ${student.lastName}`;
      studentSelect.appendChild(option);
    });
  } catch (error) {
    console.error('Error loading students:', error);
    studentSelect.innerHTML = '<option value="">حدث خطأ في التحميل</option>';
  }
}
</script>

<%- include('../partials/footer') %>
