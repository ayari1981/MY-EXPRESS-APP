<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <section class="py-8 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4">
      <!-- رأس الصفحة -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">
          <i class="fas fa-chalkboard-teacher ml-2 text-primary-600"></i>
          لوحة تحكم المدرس
        </h1>
        <p class="text-gray-600">مرحباً <%= user.name %></p>
      </div>
      
      <%- include('../partials/messages') %>
      
      <!-- إحصائيات -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">إجمالي الدروس</p>
              <p class="text-4xl font-bold text-primary-600"><%= stats.totalLessons %></p>
            </div>
            <div class="text-5xl text-primary-200">
              <i class="fas fa-book"></i>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">إجمالي التحميلات</p>
              <p class="text-4xl font-bold text-green-600"><%= stats.totalDownloads %></p>
            </div>
            <div class="text-5xl text-green-200">
              <i class="fas fa-download"></i>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">إجمالي المشاهدات</p>
              <p class="text-4xl font-bold text-blue-600"><%= stats.totalViews %></p>
            </div>
            <div class="text-5xl text-blue-200">
              <i class="fas fa-eye"></i>
            </div>
          </div>
        </div>
      </div>
      
      <!-- أزرار الإجراءات -->
      <div class="mb-6 flex flex-wrap gap-4">
        <a href="/teacher/upload" class="bg-yellow-400 hover:bg-yellow-500 text-black font-semibold px-6 py-3 rounded-lg transition-colors duration-200 inline-flex items-center shadow-md">
          <i class="fas fa-upload ml-2"></i>
          رفع درس جديد
        </a>
        <a href="/teacher/send-notification" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors duration-200 inline-flex items-center shadow-md">
          <i class="fas fa-bell ml-2"></i>
          إرسال إشعار للتلاميذ
        </a>
        <a href="/teacher/schedules" class="bg-purple-400 hover:bg-purple-500 text-black font-semibold px-6 py-3 rounded-lg transition-colors duration-200 inline-flex items-center shadow-md">
          <i class="fas fa-calendar-alt ml-2"></i>
          عرض الجداول
        </a>
        <a href="/teacher/grades" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors duration-200 inline-flex items-center shadow-md">
          <i class="fas fa-chart-line ml-2"></i>
          إدارة النتائج
        </a>
        <a href="/teacher/records" class="bg-orange-400 hover:bg-orange-500 text-black font-semibold px-6 py-3 rounded-lg transition-colors duration-200 inline-flex items-center shadow-md">
          <i class="fas fa-clipboard-list ml-2"></i>
          سجلات الطلاب
        </a>
      </div>
      
      <!-- قائمة الدروس -->
      <div class="card">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-2xl font-bold text-gray-800">دروسي</h2>
        </div>
        
        <div class="overflow-x-auto">
          <% if (lessons.length === 0) { %>
            <div class="p-8 text-center text-gray-500">
              <i class="fas fa-folder-open text-6xl mb-4 text-gray-300"></i>
              <p class="text-xl">لم تقم برفع أي درس بعد</p>
              <a href="/teacher/upload" class="btn-primary mt-4 inline-block">
                ابدأ برفع درس
              </a>
            </div>
          <% } else { %>
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">العنوان</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">المادة</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">القسم</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">التحميلات</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">المشاهدات</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">التاريخ</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الإجراءات</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% lessons.forEach(lesson => { %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4">
                      <div class="font-semibold text-gray-800"><%= lesson.title %></div>
                      <% if (lesson.description) { %>
                        <div class="text-sm text-gray-500"><%= lesson.description.substring(0, 50) %>...</div>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 text-gray-600"><%= lesson.subject %></td>
                    <td class="px-6 py-4 text-gray-600"><%= lesson.class %> <%= lesson.section || '' %></td>
                    <td class="px-6 py-4">
                      <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
                        <i class="fas fa-download ml-1"></i>
                        <%= lesson.downloads %>
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                        <i class="fas fa-eye ml-1"></i>
                        <%= lesson.views %>
                      </span>
                    </td>
                    <td class="px-6 py-4 text-gray-600 text-sm">
                      <%= new Date(lesson.created_at).toLocaleDateString('ar-TN') %>
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex space-x-reverse space-x-2">
                        <a href="/teacher/edit/<%= lesson.id %>" class="text-blue-600 hover:text-blue-800" title="تعديل">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form action="/teacher/delete/<%= lesson.id %>" method="POST" class="inline" onsubmit="return confirm('هل أنت متأكد من حذف هذا الدرس؟')">
                          <button type="submit" class="text-red-600 hover:text-red-800" title="حذف">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } %>
        </div>
      </div>
    </div>
  </section>
  
  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
