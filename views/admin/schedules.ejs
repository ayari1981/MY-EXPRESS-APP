<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - المدرسة الإعدادية أبو القاسم الشابي</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <section class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto px-4">
      <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-800">
          <i class="fas fa-calendar-alt ml-2 text-primary-600"></i>
          إدارة الجداول الدراسية
        </h1>
        <a href="/admin/schedules/upload" class="btn-primary">
          <i class="fas fa-plus ml-2"></i>
          رفع جدول جديد
        </a>
      </div>

      <%- include('../partials/messages') %>

      <!-- الإحصائيات السريعة -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">إجمالي الجداول</p>
              <p class="text-3xl font-bold text-primary-600"><%= schedules.length %></p>
            </div>
            <div class="text-5xl text-primary-200">
              <i class="fas fa-calendar"></i>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">جداول التلاميذ</p>
              <p class="text-3xl font-bold text-blue-600">
                <%= schedules.filter(s => s.scheduleType === 'تلاميذ').length %>
              </p>
            </div>
            <div class="text-5xl text-blue-200">
              <i class="fas fa-user-graduate"></i>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 mb-1">جداول الأساتذة</p>
              <p class="text-3xl font-bold text-green-600">
                <%= schedules.filter(s => s.scheduleType === 'أساتذة').length %>
              </p>
            </div>
            <div class="text-5xl text-green-200">
              <i class="fas fa-chalkboard-teacher"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- قائمة الجداول -->
      <div class="card">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-2xl font-bold text-gray-800">جميع الجداول</h2>
        </div>
        
        <div class="overflow-x-auto">
          <% if (schedules.length === 0) { %>
            <div class="p-8 text-center text-gray-500">
              <i class="fas fa-calendar-times text-6xl mb-4 text-gray-300"></i>
              <p class="text-xl">لا توجد جداول حالياً</p>
              <a href="/admin/schedules/upload" class="btn-primary mt-4 inline-block">
                رفع جدول جديد
              </a>
            </div>
          <% } else { %>
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">العنوان</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">النوع</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">القسم</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">التحميلات</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الحالة</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">التاريخ</th>
                  <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الإجراءات</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% schedules.forEach(schedule => { %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center ml-3">
                          <% if (schedule.fileType === 'pdf') { %>
                            <i class="fas fa-file-pdf text-red-600"></i>
                          <% } else if (schedule.fileType === 'xlsx' || schedule.fileType === 'xls') { %>
                            <i class="fas fa-file-excel text-green-600"></i>
                          <% } else if (schedule.fileType === 'jpg' || schedule.fileType === 'png') { %>
                            <i class="fas fa-file-image text-blue-600"></i>
                          <% } else { %>
                            <i class="fas fa-file-alt text-gray-600"></i>
                          <% } %>
                        </div>
                        <div>
                          <div class="font-semibold text-gray-800"><%= schedule.title %></div>
                          <% if (schedule.description) { %>
                            <div class="text-sm text-gray-500"><%= schedule.description.substring(0, 50) %>...</div>
                          <% } %>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <% if (schedule.scheduleType === 'تلاميذ') { %>
                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                          <i class="fas fa-user-graduate ml-1"></i>
                          تلاميذ
                        </span>
                      <% } else { %>
                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
                          <i class="fas fa-chalkboard-teacher ml-1"></i>
                          أساتذة
                        </span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 text-gray-600">
                      <%= schedule.classLevel %>
                    </td>
                    <td class="px-6 py-4">
                      <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">
                        <i class="fas fa-download ml-1"></i>
                        <%= schedule.downloads %>
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <% if (schedule.isActive) { %>
                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
                          <i class="fas fa-check-circle ml-1"></i>
                          نشط
                        </span>
                      <% } else { %>
                        <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
                          <i class="fas fa-times-circle ml-1"></i>
                          غير نشط
                        </span>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 text-gray-600 text-sm">
                      <%= new Date(schedule.created_at).toLocaleDateString('ar-TN') %>
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex space-x-reverse space-x-2">
                        <a href="/admin/schedules/download/<%= schedule.id %>" class="text-blue-600 hover:text-blue-800" title="تحميل">
                          <i class="fas fa-download"></i>
                        </a>
                        <a href="/admin/schedules/edit/<%= schedule.id %>" class="text-green-600 hover:text-green-800" title="تعديل">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form action="/admin/schedules/delete/<%= schedule.id %>" method="POST" class="inline" onsubmit="return confirm('هل أنت متأكد من حذف هذا الجدول؟')">
                          <button type="submit" class="text-red-600 hover:text-red-800" title="حذف">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') %>
</body>
</html>
