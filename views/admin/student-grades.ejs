<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - المدرسة الإعدادية أبو القاسم الشابي</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <section class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto px-4">
      <div class="mb-6 flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-800 mb-2">
            <i class="fas fa-user-graduate ml-2 text-primary-600"></i>
            تقرير نتائج التلميذ
          </h1>
          <p class="text-gray-600">
            <i class="fas fa-user ml-2"></i>
            <%= student.firstName %> <%= student.lastName %> - <%= student.classLevel %>
          </p>
        </div>
        <a href="/admin/grades" class="btn-secondary">
          <i class="fas fa-arrow-right ml-2"></i>
          رجوع
        </a>
      </div>

      <%- include('../partials/messages') %>

      <!-- معلومات التلميذ -->
      <div class="card p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <p class="text-gray-600 mb-1">الاسم الكامل</p>
            <p class="text-xl font-bold text-gray-800"><%= student.firstName %> <%= student.lastName %></p>
          </div>
          <div>
            <p class="text-gray-600 mb-1">القسم</p>
            <p class="text-xl font-bold text-gray-800"><%= student.classLevel %></p>
          </div>
          <div>
            <p class="text-gray-600 mb-1">البريد الإلكتروني</p>
            <p class="text-xl font-bold text-gray-800"><%= student.email %></p>
          </div>
        </div>
      </div>

      <% if (grades.length === 0) { %>
        <!-- لا توجد نتائج -->
        <div class="card p-12 text-center">
          <i class="fas fa-clipboard-list text-8xl text-gray-300 mb-6"></i>
          <h2 class="text-2xl font-bold text-gray-700 mb-2">لا توجد نتائج لهذا التلميذ</h2>
          <p class="text-gray-500">لم يتم إدخال أي نتائج لهذا التلميذ حتى الآن</p>
        </div>
      <% } else { %>
        <!-- المعدل العام -->
        <div class="card p-8 mb-8 text-center">
          <h2 class="text-gray-700 mb-3 text-xl">المعدل العام</h2>
          <div class="text-6xl font-bold mb-2 <%= overallAverage >= 10 ? 'text-green-600' : 'text-red-600' %>">
            <%= overallAverage.toFixed(2) %> / 20
          </div>
          <% if (overallAverage >= 16) { %>
            <p class="text-green-600 text-xl mt-2">
              <i class="fas fa-star ml-2"></i>
              ممتاز
            </p>
          <% } else if (overallAverage >= 14) { %>
            <p class="text-blue-600 text-xl mt-2">
              <i class="fas fa-thumbs-up ml-2"></i>
              جيد جدًا
            </p>
          <% } else if (overallAverage >= 12) { %>
            <p class="text-yellow-600 text-xl mt-2">
              <i class="fas fa-smile ml-2"></i>
              جيد
            </p>
          <% } else if (overallAverage >= 10) { %>
            <p class="text-orange-600 text-xl mt-2">
              <i class="fas fa-hand-peace ml-2"></i>
              متوسط
            </p>
          <% } else { %>
            <p class="text-red-600 text-xl mt-2">
              <i class="fas fa-exclamation-triangle ml-2"></i>
              ضعيف
            </p>
          <% } %>
        </div>

        <!-- إحصائيات سريعة -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="card p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 mb-1">عدد المواد</p>
                <p class="text-3xl font-bold text-primary-600"><%= Object.keys(gradesBySubject).length %></p>
              </div>
              <div class="text-5xl text-primary-200">
                <i class="fas fa-books"></i>
              </div>
            </div>
          </div>
          
          <div class="card p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 mb-1">إجمالي النتائج</p>
                <p class="text-3xl font-bold text-blue-600"><%= grades.length %></p>
              </div>
              <div class="text-5xl text-blue-200">
                <i class="fas fa-clipboard-list"></i>
              </div>
            </div>
          </div>
          
          <div class="card p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 mb-1">أعلى علامة</p>
                <% 
                  let maxGrade = Math.max(...grades.map(g => g.gradeValue));
                %>
                <p class="text-3xl font-bold text-green-600"><%= maxGrade %></p>
              </div>
              <div class="text-5xl text-green-200">
                <i class="fas fa-trophy"></i>
              </div>
            </div>
          </div>
          
          <div class="card p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 mb-1">أدنى علامة</p>
                <% 
                  let minGrade = Math.min(...grades.map(g => g.gradeValue));
                %>
                <p class="text-3xl font-bold text-red-600"><%= minGrade %></p>
              </div>
              <div class="text-5xl text-red-200">
                <i class="fas fa-arrow-down"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- النتائج مجمعة حسب الفصل -->
        <% const semesters = ['الفصل الأول', 'الفصل الثاني', 'الفصل الثالث']; %>
        <% semesters.forEach(semester => { 
          const semesterGrades = grades.filter(g => g.semester === semester);
          if (semesterGrades.length === 0) return;
          
          // حساب معدل الفصل
          const semesterAvg = semesterGrades.reduce((sum, g) => sum + parseFloat(g.gradeValue), 0) / semesterGrades.length;
        %>
          <div class="card mb-6">
            <div class="p-6 border-b border-gray-200 bg-gradient-to-l from-primary-50 to-white">
              <div class="flex justify-between items-center">
                <h3 class="text-2xl font-bold text-gray-800">
                  <i class="fas fa-calendar-alt ml-2 text-primary-600"></i>
                  <%= semester %>
                </h3>
                <div class="text-left">
                  <p class="text-sm text-gray-600">معدل الفصل</p>
                  <p class="text-2xl font-bold <%= semesterAvg >= 10 ? 'text-green-600' : 'text-red-600' %>">
                    <%= semesterAvg.toFixed(2) %>
                  </p>
                </div>
              </div>
            </div>

            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">المادة</th>
                    <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">المعلم</th>
                    <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">النوع</th>
                    <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">العلامة</th>
                    <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">التاريخ</th>
                    <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">الحالة</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% semesterGrades.forEach(grade => { %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 font-semibold text-gray-800"><%= grade.subject %></td>
                      <td class="px-6 py-4 text-gray-600">
                        <%= grade.teacherFirstName %> <%= grade.teacherLastName %>
                      </td>
                      <td class="px-6 py-4">
                        <% if (grade.gradeType === 'فرض عادي') { %>
                          <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm">فرض عادي</span>
                        <% } else if (grade.gradeType === 'فرض تأليفي') { %>
                          <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded text-sm">فرض تأليفي</span>
                        <% } else { %>
                          <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">شفاهي</span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4">
                        <span class="font-bold text-lg <%= grade.gradeValue >= 10 ? 'text-green-600' : 'text-red-600' %>">
                          <%= grade.gradeValue %> / <%= grade.maxGrade %>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-gray-600">
                        <% if (grade.examDate) { %>
                          <%= new Date(grade.examDate).toLocaleDateString('ar-TN') %>
                        <% } else { %>
                          -
                        <% } %>
                      </td>
                      <td class="px-6 py-4">
                        <% if (grade.isPublished) { %>
                          <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-eye ml-1"></i> منشور
                          </span>
                        <% } else { %>
                          <span class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-eye-slash ml-1"></i> غير منشور
                          </span>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        <% }); %>

        <!-- معدلات المواد -->
        <div class="card">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-2xl font-bold text-gray-800">
              <i class="fas fa-chart-pie ml-2 text-primary-600"></i>
              معدلات المواد
            </h3>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% Object.keys(gradesBySubject).forEach(subject => {
                const subjectAvg = subjectAverages[subject];
              %>
                <div class="p-4 bg-gray-50 rounded-lg">
                  <div class="flex justify-between items-center">
                    <h4 class="font-semibold text-gray-800"><%= subject %></h4>
                    <span class="text-xl font-bold <%= subjectAvg >= 10 ? 'text-green-600' : 'text-red-600' %>">
                      <%= subjectAvg.toFixed(2) %>
                    </span>
                  </div>
                  <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
                    <div class="<%= subjectAvg >= 10 ? 'bg-green-600' : 'bg-red-600' %> h-2 rounded-full" 
                         style="width: <%= (subjectAvg / 20 * 100) %>%"></div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <%- include('../partials/footer') %>
</body>
</html>
